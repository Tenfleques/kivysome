{
  "extends": [
    "config:base",
    ":semanticCommitType(chore)"
  ],
  "separateMinorPatch": true,
  "patch": {
    "automerge": true
  },
  "pin": {
    "automerge": true
  },
  "lockFileMaintenance": {
    "automerge": true
  },
  "vulnerabilityAlerts": {
    "labels": ["security"]
  },
  "hostRules": [
    {
      "abortOnError": true,
      "abortStatusCodes": [404]
    }
  ],
  "labels": ["dependencies"],
  "includeForks": true
}
